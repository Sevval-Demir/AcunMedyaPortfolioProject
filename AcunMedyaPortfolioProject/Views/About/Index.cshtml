@model List<AcunMedyaPortfolioProject.Models.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımda</h2>
<div class="container">
    <table class="table table-bordered">
        <thead class="thead-dark">

            <tr>
                <th>Id</th>
                <th>Başlık</th>
                <th>Açıklama</th>
                <th>Kişisel Resim</th>
                <th>CV Link</th>
                <th>Güncelle</th>
                <th>Kaldır</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var about in Model)
            {
                <tr>
                    <td>@about.Id</td>
                    <td>@about.Title</td>
                    <td>@about.Description</td>
                    <td><img src="@about.ImageUrl" alt="Resim" class="img-fluid" style="width: 100px; height: auto;"/></td>
                    <td><a href="@about.CVLink" target="_blank" class="btn btn-info">İncele</a></td>
                    <td><a href="/About/UpdateAbout/@about.Id" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/About/DeleteAbout/@about.Id" class="btn btn-danger">Kaldır</a></td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/About/CreateAbout" class="btn btn-primary">Yeni Bilgi Ekle</a>
</div>


