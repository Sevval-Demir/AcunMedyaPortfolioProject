@model List<AcunMedyaPortfolioProject.Models.Educations>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Eğitim</h2>
<div class="container">
    <table class="table table-bordered">
        <thead>

            <tr>
                <th>Id</th>
                <th>Başlık</th>
                <th>Kurum Adı</th>
                <th>Başlangıç Tarihi</th>
                <th>Bitiş Tarihi</th>
                <th>Açıklama</th>
                <th>Güncelle</th>
                <th>Kaldır</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.InstutionName</td>
                    <td>@item.StartDate</td>
                    <td>@item.EndDate</td>
                    <td>@item.Description</td>
                    <td><a href="/Educations/UpdateEducation/@item.Id" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Educations/DeleteEducation/@item.Id" class="btn btn-danger">Kaldır</a></td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/Educations/CreateEducation" class="btn btn-primary">Yeni Eğitim Ekle</a>
</div>