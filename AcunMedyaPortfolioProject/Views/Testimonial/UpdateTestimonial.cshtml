@model AcunMedyaPortfolioProject.Models.Testimonials
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referans Güncelleme</h2>

<div class="container">
    <form method="post">
        @Html.HiddenFor(x => x.Id)
        <label>İsim Soyisim</label>
        @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
        <br />
        <label>Açıklama</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        <br />
        <label>Kişisel Resim</label>
        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
        <br />
        <label>CV Linki</label>
        @Html.TextBoxFor(x => x.Comment, new { @class = "form-control" })
        <br />
        <button class="btn btn-info">Referans Güncelle</button>
    </form>
</div>