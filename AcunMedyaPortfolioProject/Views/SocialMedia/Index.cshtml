@model List<AcunMedyaPortfolioProject.Models.SocialMedia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Sosyal Medya</h2>
<div class="container">
    <table class="table table-bordered">
        <thead>

            <tr>
                <th>Id</th>
                <th>Sosyal Medya İsmi</th>
                <th>Sosyal Medya İkonu</th>
                <th>Sosyal Medya Link</th>
                <th>Güncelle</th>
                <th>Kaldır</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td><img src="@item.Icon" /></td>
                    <td>@item.Url</td>
                    <td><a href="/About/UpdateAbout/@item.Id" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/About/DeleteAbout/@item.Id" class="btn btn-danger">Kaldır</a></td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/SocialMedia/CreateSocialMedia" class="btn btn-primary">Yeni Sosyal Medya Ekle</a>
</div>


