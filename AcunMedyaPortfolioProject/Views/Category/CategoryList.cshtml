@model List<AcunMedyaPortfolioProject.Models.Categories>
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>CategoryList</h2>
<div class="container">
    <table class="table table-bordered">
        <thead>

            <tr>
                <th>Id</th>
                <th>Kategori İsmi</th>
                <th>Güncelle</th>
                <th>Kaldır</th>

            </tr>
            </thead>
        <tbody>
            @foreach (var category in Model)
            {
            <tr>
                <td>@category.CategoryID</td>
                <td>@category.CategoryName</td>
                <td><a href="/Category/UpdateCategory/@category.CategoryID" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Category/DeleteCategory/@category.CategoryID" class="btn btn-danger">Kaldır</a></td>
            </tr>
            }
        </tbody>
        </table>
        
    <a href="/Category/CreateCategory" class="btn btn-primary">Yeni kategori ekle</a>
</div>