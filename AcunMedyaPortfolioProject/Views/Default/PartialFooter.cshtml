<footer class="bg-dark text-white text-center py-4">
    <p>&copy; 2025 Tüm Hakları Saklıdır. | Kışisel Blog</p>

    <div class="categories">
        <h5>Etiketler</h5>
        <div class="category-list">
            @foreach (var value in ViewBag.Categories as List<AcunMedyaPortfolioProject.Models.Categories>)
            {
                <span class="category-item">@value.CategoryName</span>
            }
        </div>
    </div>
</footer>

<style>
    .category-list {
        display: flex;
        justify-content: center;
        gap: 10px;
        padding: 10px;
        flex-wrap: wrap;
    }

    .category-item {
        font-size: 14px;
        color: #555;
        padding: 6px 15px;
        background-color: #f0f0f0;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
        border: 1px solid #ccc;
        border-radius: 20px;
    }

        .category-item:hover {
            background-color: #2ecc71;
            color: white;
            border-color: #27ae60;
        }
</style>
