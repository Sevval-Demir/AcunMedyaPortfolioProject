@model List<AcunMedyaPortfolioProject.Models.Experiences>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Deneyimlerim</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>

            <tr>
                <th>Id</th>
                <th>Başlık</th>
                <th>Şirket Adı</th>
                <th>Başlangıç Tarihi</th>
                <th>Bitiş Tarihi</th>
                <th>Açıklama</th>
                <th>Güncelle</th>
                <th>Kaldır</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                   <td>@item.Title</td>
                    <td>@item.StartDate</td>
                    <td>@item.EndDate</td>
                    <td>@item.Description</td>
                    <td><a href="/Experiences/UpdateExperiences/@item.Id" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Experiences/DeleteExperiences/@item.Id" class="btn btn-danger">Kaldır</a></td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/Experiences/CreateExperiences" class="btn btn-primary">Yeni Deneyim Ekle</a>
</div>


