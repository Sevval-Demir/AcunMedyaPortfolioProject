@model List<AcunMedyaPortfolioProject.Models.Contact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Contact</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>

            <tr>
                <th>Id</th>
                <th>Telefon</th>
                <th>Mail</th>
                <th>Adres</th>
                <th>Güncelle</th>
                <th>Kaldır</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model)
            {
                <tr>
                    <td>@contact.Id</td>
                    <td>@contact.Phone</td>
                    <td>@contact.MailAddress</td>
                    <td>@contact.Address</td>
                    <td><a href="/Contact/UpdateContactPost/@contact.Id" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Contact/DeleteContact/@contact.Id" class="btn btn-danger">Kaldır</a></td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/Contact/CreateContact" class="btn btn-primary">Yeni İletişim Ekle</a>
</div>


